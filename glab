#!/bin/bash

# glab - Git add, commit and push to GitLab remote
# Usage: glab "commit message"

if [ -z "$1" ]; then
    echo "Error: Please provide a commit message"
    echo "Usage: glab \"your commit message\""
    exit 1
fi

# Add all changes
git add .

# Commit with provided message
git commit -m "$1"

# Push to GitLab remote
git push gitlab main

echo "Successfully pushed to GitLab!"