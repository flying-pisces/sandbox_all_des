#!/bin/bash

# ghub - Git add, commit and push to GitHub remote
# Usage: ghub "commit message"

if [ -z "$1" ]; then
    echo "Error: Please provide a commit message"
    echo "Usage: ghub \"your commit message\""
    exit 1
fi

# Remove GitLab-specific files if they exist
rm -f glab
rm -f README.md

# Use GitHub-specific README
if [ -f README-github.md ]; then
    cp README-github.md README.md
fi

# Add all changes except GitLab-related files
git add -A
git reset -- glab 2>/dev/null

# Commit with provided message
git commit -m "$1"

# Push to GitHub remote
git push github main

echo "Successfully pushed to GitHub!"